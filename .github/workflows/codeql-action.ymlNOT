name: 'PR Check - Packaging: Download using registries'
env:
  GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
on:
  push:
    branches:
    - main
  pull_request:
    types:
    - opened
    - synchronize
    - reopened
    - ready_for_review
    branches:
    - main
  workflow_dispatch: {}

jobs:
  codeql:
    runs-on: ubuntu-latest
    steps:
    - name: Check out repository
      uses: actions/checkout@v3
  
    - name: Init with registries-auth-tokens
      uses: github/codeql-action/init@aeisenberg/ghes-pack-download
      with:
        tools: https://github.com/dsp-testing/codeql-cli-nightlies/releases/download/codeql-bundle-20220901/codeql-bundle.tar.gz
        config-file: ./.github/codeql/codeql-config-registries.yml
        languages: javascript
        registries-auth-tokens: https://containers.aeisenberg-0bb3b45a2419ebce4.gh-quality.net/v2/=${{ secrets.GHES_TOKEN }}
      env:
        TEST_MODE: true
